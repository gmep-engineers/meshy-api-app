<div class="main-container">
  <header style="display: flex ;flex-direction: row;">
    <button onclick="BtnBack()" style=" padding: 10px 10px;
    margin: 30px 10px; background-color: lightslategray; color: #fff;">Back</button>
  <h2 style="background-color: #343a40;
  color: white;
  padding: 15px 30px;
  width: 100%;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  box-sizing: border-box;">Image Gallery</h2>
</header>
    <ul class="task-list">
        <%- htmlTasks %>
    </ul>
</div>

<style>
  .task-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 20px;
    padding: 0;
    list-style: none;
  }

  .task-item {
    text-align: center;
    background-color: #fff;
    border-radius: 12px;
    padding: 12px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  }

  .task-item img {
    width: 100%;
    height: auto;
    max-height: 160px;
    object-fit: cover;
    border-radius: 8px;
  }
</style>

<script>
  const BtnBack = function() {
      window.location.href = "<%= config.BASE_URL %>/meshy";
  }
  </script>