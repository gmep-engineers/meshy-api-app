<div class="main-container">
    <ul class="task-list">
        <%- htmlTasks %>
    </ul>
</div>

<style>
  .task-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: 20px;
    padding: 0;
    list-style: none;
  }

  .task-item {
    text-align: center;
    background-color: #fff;
    border-radius: 12px;
    padding: 12px;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  }

  .task-item img {
    width: 100%;
    height: auto;
    max-height: 160px;
    object-fit: cover;
    border-radius: 8px;
  }
</style>
