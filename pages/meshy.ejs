<header>
  <h2 style="  background-color: #343a40;
  color: white;
  padding: 15px 30px;
  width: 100%;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  box-sizing: border-box;">Meshy Upload Portal</h2>
</header>
<div class="main-container">
    <div class="main-subsection-container uploader">
        <form
          action="<%= config.BASE_URL %>/api/image"
          method="post"
          enctype="multipart/form-data"
          class="upload-input"
        >
          <input
            type="file"
            id="image"
            name="image"
            accept="image/png, image/jpeg"
            class="button"
          />
          <div class="upload-button">
            <input
              type="submit"
              class="button"
              value="Upload Image"
              id="upload-button"
            />
          </div>
        </form>
    </div>
    <div class="main-subsection-container">- OR -</div>
    <div class="main-subsection-container text-input">
      <textarea id="input">
      </textarea>
      <button onclick="submitText()">
        Submit Text
      </button>
    </div>
    <div class="main-subsection-container text-input">
      <button onclick="seeAllPics()">
        See All
      </button>
    </div>
</div>
<script>
  const seeAllPics = function() {
      window.location.href = "<%= config.BASE_URL %>/meshy/tasks";
  }
  const submitText = async function() { 
    const textarea = document.getElementById("input");
    if (textarea.value) {
      const url = "<%= config.BASE_URL %>/api/text"
      const body = JSON.stringify({
        text: textarea.value
      });
      console.log(url)
      const response = await fetch(url, {
        headers: { "Content-Type": "application/json"}, 
        method: "POST",
        body: body
      });
      if (response.ok) {
        window.location.href = "<%= config.BASE_URL %>/meshy/tasks";
      } else {

      }
    }
  }
</script>
</script>

